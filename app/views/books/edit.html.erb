<h1>Editing Book</h1>

<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
<% end %>

<% if @book.errors.any? %>
  <div class = "alert">
    <h2>error</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@book, local: true do |f| %>
  <h2>Title</h2>
  <%= f.text_field :title %>
  <h2>Body</h2>
  <%= f.text_area :body %>
  <%= f.submit "Update Book" %>
  
<% end %>
<p><%=link_to "Show", book_path(@book.id) %> | <%=link_to "Back", books_path %></p>

